/* --- Layout Geral da Página --- */
body {
    font-family: var(--gs-fonte-principal);
    background-color: var(--gs-fundo-pagina);
    margin: 0;
    line-height: 1.6;
    margin-left: 250px;
    transition: margin-left 0.3s ease;
}

body.menu-aberto {
    margin-left: 250px;
}

.uc-container {
    width: 100%;
    padding: 25px;
    margin-left: 0;
    transition: margin-left 0.3s ease;
}

body.menu-aberto .uc-container {
    margin-left: 250px;
    width: calc(100% - 250px);
}

.usuarios-cadastrados h1 {
    font-size: 1.8rem;
    color: var(--gs-secundaria);
    font-weight: 600;
    margin-bottom: 25px;
    padding-bottom: 15px;
    border-bottom: 1px solid var(--gs-borda);
}

.uc-controles-topo {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 25px;
    flex-wrap: wrap;
    gap: 15px;
}

.uc-filtro-tipo {
    display: flex;
    align-items: center;
    gap: 8px;
}

.uc-filtro-tipo label {
    font-weight: 500;
    color: var(--gs-texto-secundario);
}

.uc-filtro-tipo select {
    padding: 8px 12px;
    border: 1px solid var(--gs-borda);
    border-radius: var(--gs-raio-borda-input);
    background-color: var(--gs-branco);
    cursor: pointer;
    min-width: 200px;
}

.uc-filtro-tipo select:focus {
    outline: none;
    border-color: var(--gs-primaria);
    box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.25);
}

.uc-loading-spinner {
    display: none;
    font-size: 1.5rem;
    text-align: center;
    margin: 40px 0;
    color: var(--gs-texto-secundario);
}

/* --- Lista de Cards --- */
.uc-usuarios-lista {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 25px;
}


/* --- Estrutura e Estilos do Card (NOVO E ORGANIZADO) --- */
.usuario-card-custom { /* Usamos uma classe custom para não interferir com .gs-card global */
    display: flex;
    flex-direction: column;
    gap: 15px; /* Espaçamento entre as seções */
    transition: opacity 0.3s ease, background-color 0.3s ease;
}

/* Estilo para ex-empregado */
.usuario-card-custom.status-ex-empregado {
    background-color: #f8f9fa; /* Fundo cinza claro */
    opacity: 0.85;
}
.usuario-card-custom.status-ex-empregado:hover {
    opacity: 1;
}

.card-cabecalho {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 10px;
    border-bottom: 1px solid var(--gs-borda);
}

.card-titulo-nome {
    font-size: 1.25rem;
    color: var(--gs-secundaria);
    margin: 0;
}

.status-selo {
    padding: 4px 10px;
    font-size: 0.75rem;
    font-weight: 700;
    border-radius: 50px; /* Formato de pílula */
    text-transform: uppercase;
    color: var(--gs-branco);
}

.status-selo.empregado {
    background-color: var(--gs-sucesso);
}

.status-selo.ex-empregado {
    background-color: var(--gs-texto-secundario);
}

.card-secao {
    padding-top: 10px;
    border-top: 1px dashed #e9ecef;
}
.card-secao:first-of-type {
    padding-top: 0;
    border-top: none;
}

.card-secao-titulo {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--gs-primaria);
    text-transform: uppercase;
    margin-bottom: 12px;
}

.card-secao p {
    margin: 8px 0;
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9rem;
}

.card-secao p > span:first-child { /* Label "Nome:", "Email:", etc. */
    font-weight: 600;
    color: var(--gs-texto-principal);
    min-width: 110px;
}
.card-secao .uc-dado-texto {
    color: var(--gs-texto-secundario);
}
.card-secao .uc-input-edit {
    flex-grow: 1; /* Faz o input ocupar o espaço restante */
}


/* Grid para a Jornada de Trabalho */
.jornada-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
}
.jornada-grid > div {
    display: flex;
    flex-direction: column;
}
.jornada-grid label {
    font-size: 0.8rem;
    font-weight: 500;
    margin-bottom: 4px;
    color: var(--gs-texto-secundario);
}

/* Display da jornada no modo visualização */
.jornada-display {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5px 15px;
    font-size: 0.9rem;
    color: var(--gs-texto-secundario);
}

/* Botões dentro do Card */
.uc-card-botoes-container {
    margin-top: auto; /* Empurra os botões para o final do card */
    padding-top: 15px;
    border-top: 1px solid var(--gs-borda);
    display: flex;
    justify-content: flex-end;
    gap: 10px;
}

/* --- Sobrescritas e Ajustes Finais --- */
/* Garante que o input de salário não fique gigante */
.uc-salario-input, .uc-passagem-input {
    max-width: 150px;
}

.uc-tipos-container {
    display: flex;
    flex-direction: column;
    gap: 5px;
    margin-top: 10px;
}


/* --- Responsividade --- */
@media (max-width: 1024px) {
    body.menu-aberto .uc-container {
        margin-left: 0;
        width: 100%;
    }
}

@media (max-width: 768px) {
    .uc-container { padding: 15px; }
    .uc-usuarios-lista { grid-template-columns: 1fr; }
    .uc-controles-topo { flex-direction: column; align-items: stretch; }
}