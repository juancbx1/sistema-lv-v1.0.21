    box-shadow: none;
}

/* Estilo específico para o botão de cancelar */
.btn-acao.cancelar {
    background-color: var(--gs-texto-secundario); /* Cor neutra, menos destaque que finalizar */
}
.btn-acao.cancelar:hover {
    background-color: var(--gs-perigo); /* Fica vermelho no hover, indicando uma ação destrutiva */
