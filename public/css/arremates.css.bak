    font-weight: 700;
    color: var(--gs-secundaria);
    width: 120px;
    height: 60px;
    border: 1px solid var(--gs-borda);
    border-left: none;
    border-right: none;
    border-radius: 0;
    padding: 5px;
}

.input-container .oa-input-tarefas:focus {
    box-shadow: none; /* Remove a sombra de foco padrão para manter o visual limpo */
}

.input-container .oa-input-tarefas::-webkit-outer-spin-button,
.input-container .oa-input-tarefas::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

.ajuste-qtd-btn {
    width: 50px;
    height: 60px;
    font-size: 1.8rem;
    font-weight: 400;
    color: var(--gs-primaria);
    background-color: var(--gs-fundo-input);
    border: 1px solid var(--gs-borda);
    cursor: pointer;
    transition: background-color 0.2s;
    line-height: 1;
}
.ajuste-qtd-btn:hover {
    background-color: #e9ecef;
}
.ajuste-qtd-btn:first-of-type {
    border-top-left-radius: 8px;
    border-bottom-left-radius: 8px;
}
.ajuste-qtd-btn:last-of-type {
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
}

.atalhos-qtd-container {
    display: flex;
    gap: 10px;
    justify-content: center;
    width: 100%;
}

.atalho-qtd-btn {
    flex-grow: 1;
    padding: 10px;
    font-size: 0.9rem;
    font-weight: 500;
    background-color: transparent;
    border: 1px solid var(--gs-borda);
    color: var(--gs-texto-principal);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s;
}
.atalho-qtd-btn:hover {
    background-color: var(--gs-fundo-input);
    border-color: var(--gs-primaria);
    color: var(--gs-primaria);
}

/* Garante que o botão confirmar tenha um bom espaçamento e largura */
#btnConfirmarAtribuicao {
    width: 100%;
    max-width: 280px;
    padding: 12px;
    margin: 15px auto 0 auto; 
    display: block;
    flex-shrink: 0;
}

.coluna-confirmacao::-webkit-scrollbar {
    display: none; /* Esconde a barra de rolagem */
}


/* ==========================================================================
   # ESTILOS REDESIGN MODO FOCO
   ========================================================================== */

.foco-resumo-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 15px;
}

.foco-resumo-item {
    display: flex;
    align-items: center;
    gap: 12px;
    background-color: var(--gs-branco);
    padding: 10px;
    border-radius: var(--gs-raio-borda-card);
    border: 1px solid var(--gs-borda);
}

.foco-resumo-img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
}

.foco-resumo-info {
    display: flex;
    flex-direction: column;
}

.foco-resumo-nome {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--gs-texto-principal);
    line-height: 1.2;
}

.foco-resumo-qtd {
    font-size: 0.85rem;
    color: var(--gs-texto-secundario);
}

/* Estilos para os cards de tarefa detalhada */
#focoTarefas {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.foco-tarefa-card {
    display: flex;
    align-items: center;
    gap: 15px;
    background-color: var(--gs-branco);
    padding: 12px 15px;
    border-radius: var(--gs-raio-borda-card);
    border: 1px solid var(--gs-borda);
    box-shadow: var(--gs-sombra-padrao);
}

.foco-tarefa-img {
    width: 50px;
    height: 50px;
    border-radius: 6px;
    object-fit: cover;
    flex-shrink: 0;
}

.foco-tarefa-info {
    flex-grow: 1;
}

.foco-tarefa-produto {
    font-size: 1rem;
    font-weight: 600;
    color: var(--gs-secundaria);
    display: block;
}

.foco-tarefa-variante {
    font-size: 0.85rem;
    color: var(--gs-texto-secundario);
    margin-bottom: 8px;
    display: block;
}

.foco-tarefa-metricas {
    display: flex;
    gap: 20px;
    font-size: 0.9rem;
}
.foco-tarefa-metricas i {
    margin-right: 6px;
    color: var(--gs-texto-secundario);
}

.btn-desfazer-tarefa {
    background-color: var(--gs-fundo-input);
    color: var(--gs-texto-secundario);
    border: 1px solid var(--gs-borda);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.2s;
    flex-shrink: 0;
}
.btn-desfazer-tarefa:hover:not(:disabled) {
    background-color: var(--gs-perigo);
    color: var(--gs-branco);
    border-color: var(--gs-perigo);
    transform: scale(1.1);
}
.btn-desfazer-tarefa:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

/* --- Estilos para o Menu de Ações Rápidas --- */
.btn-menu-acoes {
    background: none;
    border: none;
    color: var(--gs-texto-secundario);
    cursor: pointer;
    font-size: 1.2rem;
    padding: 5px;
    border-radius: 50%;
    width: 32px;
    height: 32px;
    transition: color 0.2s, background-color 0.2s;
}
.btn-menu-acoes:hover {
    color: var(--gs-primaria);
    background-color: #f0f8ff;
}

.menu-acoes-popup {
    position: absolute; /* IMPORTANTE: Mantenha como 'absolute' */
    top: 45px;
    right: 15px;
    z-index: 10;
    background-color: var(--gs-branco);
    border-radius: 8px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.15);
    width: 220px;
    display: none;
    padding: 5px 0;
    border: 1px solid var(--gs-borda);
}


.menu-acoes-popup.visivel {
    display: block;
}

.menu-acoes-popup button {
    display: flex;
    align-items: center;
    gap: 10px;
    width: 100%;
    padding: 10px 15px;
    background: none;
    border: none;
    text-align: left;
    cursor: pointer;
    font-size: 0.9rem;
    color: var(--gs-texto-principal);
}
.menu-acoes-popup button:hover {
    background-color: var(--gs-fundo-input);
}
.menu-acoes-popup button i {
    width: 20px;
    text-align: center;
    color: var(--gs-texto-secundario);
}   

/* --- Estilo para Ações Otimistas em Andamento --- */
.oa-card-status-tiktik.acao-em-andamento {
    opacity: 0.6;
    pointer-events: none; /* Impede cliques múltiplos enquanto a ação processa */
    position: relative;
}

.oa-card-status-tiktik.acao-em-andamento::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 28px;
    height: 28px;
    margin-top: -14px;
    margin-left: -14px;
    border: 3px solid rgba(255, 255, 255, 0.5);
    border-top-color: var(--gs-branco);
    border-radius: 50%;
    animation: oa-spin 0.8s linear infinite;
}

/* --- Estilos para o Aviso de Horário Estendido --- */
.aviso-horario-estendido {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 6px 10px;
    margin: 8px;
    font-size: 0.8rem;
    font-weight: 600;
    text-align: center;
}

/* Cores por Nível de Alerta */
.aviso-horario-estendido.nivel-atencao { /* Amarelo para Pausas */
    background-color: #fffbeb;
    color: #b38600;
    border-bottom: 1px solid #ffeeba;
}

.aviso-horario-estendido.nivel-critico { /* Vermelho para Fora do Expediente */
    background-color: #f8d7da;
    color: #721c24;
    border-bottom: 1px solid #f5c6cb;
}

.aviso-horario-estendido.nivel-info { /* Azul/Cinza para Antes do Expediente */
    background-color: #e2e3e5;
    color: #383d41;
    border-bottom: 1px solid #d6d8db;
}

/* ==========================================================================
   # FASE 2: ESTILOS DO NOVO CARD DE ARREMATE (REACT)
   ========================================================================== */

.oa-card-arremate-react {
    display: grid;
    grid-template-columns: auto 1fr auto; /* Colunas: Imagem, Info, Pendente */
    grid-template-rows: auto;
    gap: 0 16px;
    align-items: center;
    background-color: var(--gs-branco);
    border-radius: var(--gs-raio-borda-card);
    padding: 16px;
    box-shadow: var(--gs-sombra-padrao);
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    position: relative;
    overflow: hidden;
}

.oa-card-arremate-react:hover {
    transform: translateY(-4px);
    box-shadow: var(--gs-sombra-hover);
}

.card-borda-charme {
    position: absolute;
    left: 0;
    top: 0;
    width: 6px;
    height: 100%;
    background-color: var(--gs-primaria);
}

.card-imagem-produto {
    grid-column: 1 / 2;
    width: 70px;
    height: 70px;
    object-fit: cover;
    border-radius: 8px;
    background-color: var(--gs-fundo-input);
}

.card-info-principal {
    grid-column: 2 / 3;
    display: flex;
    flex-direction: column;
    gap: 4px;
}

.card-info-principal h3 {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--gs-secundaria);
    margin: 0;
    line-height: 1.3;
}

.card-info-principal p {
    font-size: 0.9rem;
    color: var(--gs-texto-secundario);
    margin: 0;
}

.card-info-secundaria {
    display: flex;
    gap: 16px;
    margin-top: 8px;
    font-size: 0.85rem;
    color: var(--gs-texto-secundario);
}

.card-info-secundaria .info-item {
    display: flex;
    align-items: center;
    gap: 6px;
}

.card-bloco-pendente {
    grid-column: 3 / 4;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #f0f8ff; /* Azul bem claro */
    align-self: stretch; /* Ocupa a altura toda */
    padding: 10px 15px;
    border-radius: 8px;
    text-align: center;
}

.card-bloco-pendente .label {
    font-size: 0.7rem;
    font-weight: 700;
    color: var(--gs-primaria);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.card-bloco-pendente .valor {
    font-size: 2rem;
    font-weight: 700;
    color: var(--gs-secundaria);
    line-height: 1.1;
}

/* Estilos do Tooltip */
.custom-tooltip {
    background-color: var(--gs-secundaria) !important;
    color: #fff !important;
    border-radius: 6px !important;
    padding: 8px 12px !important;
    font-size: 0.9rem !important;
    z-index: 9999;
}

.tooltip-lista-ops {
    list-style: none;
    margin: 0;
    padding: 0;
}
.tooltip-lista-ops li {
    display: flex;
    justify-content: space-between;
    gap: 20px;
    padding: 4px 0;
}
.tooltip-data-op {
    color: #bdc3c7; /* Cinza claro */
    font-size: 0.8rem;
}

.info-item-data {
    display: flex;
    align-items: center;
    gap: 6px;
    background-color: #f4f6f8; /* Um cinza bem claro para destacar */
    padding: 4px 8px;
    border-radius: 4px;
}

.info-item-data i {
    color: var(--gs-texto-secundario);
}

.info-item-data span {
    display: flex;
    flex-direction: column;
    line-height: 1.2;
    font-size: 0.8rem;
    text-align: left;
}

.info-item-data span strong {
    font-weight: 700;
    color: var(--gs-texto-principal);
    font-size: 0.85rem;
}


/* ==========================================================================
   # ESTILOS GERAIS PARA MODAIS E POPUPS (Refatorado)
   ========================================================================== */

/* --- Botão Voltar (Estilo Base) --- */
.btn-voltar-header {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: none;
    border: 1px solid var(--gs-borda);
    color: var(--gs-texto-principal);
    font-size: 0.9rem;
    font-weight: 500;
    padding: 6px 14px;
    border-radius: 20px;
    cursor: pointer;
    transition: all 0.2s ease;
}
.btn-voltar-header:hover {
    background-color: var(--gs-fundo-input);
    border-color: var(--gs-primaria);
}

/* --- Botão Fechar (Estilo Base) --- */
.oa-modal-fechar-btn {
    background-color: var(--gs-perigo);
    color: var(--gs-branco);
    border: none;
    border-radius: 50%;
    width: 32px;
    height: 32px;
    font-size: 1rem;
    font-weight: bold;
    line-height: 32px;
    text-align: center;
    cursor: pointer;
    transition: transform 0.2s ease, background-color 0.2s ease;
}
.oa-modal-fechar-btn:hover {
    background-color: #c0392b;
    transform: scale(1.1);
}

/* --- Título do Modal (Estilo Base) --- */
.oa-modal-titulo {
    font-size: 1.2rem;
    color: var(--gs-secundaria);
    margin: 0;
}

/* ==========================================================================
   # ESTILOS GERAIS PARA MODAIS (Refatorado e Simplificado)
   ========================================================================== */
.btn-voltar-header {
    display: inline-flex; align-items: center; gap: 6px; background: none;
    border: 1px solid var(--gs-borda); color: var(--gs-texto-principal);
    font-size: 0.9rem; font-weight: 500; padding: 6px 14px; border-radius: 20px;
    cursor: pointer; transition: all 0.2s ease;
}
.btn-voltar-header:hover {
    background-color: var(--gs-fundo-input); border-color: var(--gs-primaria);
}
.oa-modal-fechar-btn {
    background-color: var(--gs-perigo); color: var(--gs-branco); border: none;
    border-radius: 50%; width: 32px; height: 32px; font-size: 1rem; font-weight: bold;
    line-height: 32px; text-align: center; cursor: pointer; transition: all 0.2s ease;
}
.oa-modal-fechar-btn:hover {
    background-color: #c0392b; transform: scale(1.1);
}


/* ==========================================================================
   # MODAL DE ATRIBUIÇÃO V2 (Com Lógica Responsiva CORRIGIDA)
   ========================================================================== */
.oa-modal-atribuir-v2 {
    z-index: 1001; position: relative; width: 90%; height: 90vh;
    background-color: var(--gs-fundo-pagina); border-radius: var(--gs-raio-borda-card);
    display: flex; flex-direction: column; box-shadow: var(--gs-sombra-hover);
    transition: max-width 0.4s ease-in-out;
}
.oa-modal-atribuir-v2.modo-lista { max-width: 1200px; }
.oa-modal-atribuir-v2.modo-confirmacao { max-width: 500px; }

.oa-modal-atribuir-v2 .oa-modal-body {
    padding: 15px; flex-grow: 1; overflow-y: auto;
}

/* --- ESTILOS PADRÃO (MOBILE-FIRST) --- */

/* Header em duas linhas */
.oa-modal-atribuir-v2 .oa-modal-header {
    display: grid;
    grid-template-columns: auto 1fr auto;
    grid-template-rows: auto auto;
    align-items: center; gap: 10px; padding: 10px 15px;
    background-color: var(--gs-branco);
    border-bottom: 1px solid var(--gs-borda);
    flex-shrink: 0;
    border-radius: var(--gs-raio-borda-card)
}
.oa-modal-atribuir-v2 .btn-voltar-header { grid-column: 1 / 2; grid-row: 1 / 2; }
.oa-modal-atribuir-v2 .oa-modal-fechar-btn { grid-column: 3 / 4; grid-row: 1 / 2; justify-self: end; }
.oa-modal-atribuir-v2 .oa-modal-titulo {
    grid-column: 1 / 4; grid-row: 2 / 3;
    text-align: center; font-size: 1.1rem; padding: 0;
}

/* Layout dos filtros e conteúdo empilhado */
.layout-selecao-produto {
    display: flex;
    flex-direction: column;
    height: 100%;
}
.coluna-conteudo-principal {
    padding-top: 20px;
}
.coluna-filtros {
    order: 1; /* Filtros em cima */
}
.coluna-conteudo-principal {
    order: 2; /* Conteúdo embaixo */
}

/* ==========================================================================
   # ACORDEÃO DE FILTROS PARA MODAL HISTÓRICO (Mobile)
   ========================================================================== */

.oa-filtros-acordeao {
    flex-shrink: 0;
    border-bottom: 1px solid var(--gs-borda);
}

.oa-acordeao-header {
    display: flex;
    align-items: center;
    gap: 10px;
    width: 100%;
    padding: 12px 20px;
    background-color: #f9fbfd;
    border: none;
    font-size: 1rem;
    font-weight: 500;
    color: var(--gs-texto-principal);
    cursor: pointer;
}

.oa-acordeao-icone {
    margin-left: auto; /* Empurra o ícone de seta para a direita */
    transition: transform 0.3s ease;
}

.oa-acordeao-header.active .oa-acordeao-icone {
    transform: rotate(180deg);
}

.oa-acordeao-content {
    max-height: 0; /* Começa fechado */
    overflow: hidden;
    transition: max-height 0.3s ease-out;
}

.oa-acordeao-content.open {
    max-height: 500px; /* Altura suficiente para mostrar os filtros */
}

/* Os filtros em si, agora dentro do acordeão */
.oa-modal-filtros {
    border-bottom: none; /* A borda agora está no container do acordeão */
    padding-top: 0;
}


/* ==========================================================================
   # DESIGN DO FORMULÁRIO DE REGISTRO DE PERDA
   ========================================================================== */

/* Card que envolve o formulário */
.form-card-perda {
    width: 100%;
    background-color: var(--gs-branco);
    padding: 25px;
    border-radius: var(--gs-raio-borda-card);
    border: 1px solid var(--gs-borda);
    box-shadow: var(--gs-sombra-padrao);
}

/* Estilo para o Textarea (caso não exista um genérico) */
.oa-textarea {
    width: 100%;
    padding: 12px;
    font-size: 1rem;
    border: 1px solid var(--gs-borda);
    border-radius: 6px;
    font-family: var(--gs-fonte-principal);
    resize: vertical; /* Permite ao usuário redimensionar verticalmente */
}

/* Novo seletor de quantidade para perdas */
.seletor-quantidade-perda {
    text-align: center;
}
.seletor-quantidade-perda label {
    font-weight: 500;
    margin-bottom: 10px !important; /* !important para garantir a sobreposição */
    display: block;
}

.input-container-perda {
    display: flex;
    justify-content: center;
    align-items: center;
    max-width: 200px;
    margin: 0 auto;
}
/* Reutiliza o estilo do input de tarefas que já temos */
.input-container-perda .oa-input-tarefas {
    width: 80px;
    height: 50px;
    font-size: 1.8rem;
    text-align: center; 
}
/* Reutiliza o estilo dos botões +/- que já temos */
.input-container-perda .ajuste-qtd-btn {
    width: 45px;
    height: 50px;
}

.saldo-maximo-info {
    display: block;
    margin-top: 8px;
    font-size: 0.8rem;
    color: var(--gs-texto-secundario);
    font-style: italic;
}

/* ==========================================================================
   # CARIMBO DE STATUS PARA CARDS INATIVOS
   ========================================================================== */

.status-carimbo-container {
    flex-grow: 1; /* Ocupa o espaço vazio do card */
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden; /* Garante que o carimbo não vaze para fora */
    position: relative; /* Necessário para o posicionamento do carimbo */
    min-height: 100px; /* Garante uma altura mínima para o carimbo aparecer */
}

.status-carimbo {
    position: absolute;
    font-size: 2rem; /* Tamanho da fonte bem grande */
    font-weight: 700;
    text-transform: uppercase;
    color: currentColor; /* Pega a cor definida pela classe de status */
    border: 4px solid currentColor; /* Borda com a mesma cor */
    border-radius: 10px;
    padding: 10px 25px;
    opacity: 0.15; /* Efeito de "tinta fraca" */
    transform: rotate(-15deg); /* A inclinação do carimbo */
    user-select: none; /* Impede que o texto seja selecionado */
    white-space: nowrap; /* Impede que o texto quebre a linha */
}

/* Cores específicas para cada status */
.status-livre .status-carimbo,
.status-livre-manual .status-carimbo {
    color: var(--gs-sucesso);
}
.status-almoco .status-carimbo {
    color: #fd7e14; /* Laranja */
}
.status-pausa .status-carimbo,
.status-pausa-manual .status-carimbo {
    color: var(--gs-aviso);
}
.status-faltou .status-carimbo {
    color: #ff4907; /* Laranja forte */
}
.status-alocado-externo .status-carimbo {
    color: #8e44ad; /* Roxo */
}
.status-fora-do-horario .status-carimbo {
    color: #adb5bd; /* Cinza claro */
}

/* ==========================================================================
   # INDICADOR DE RITMO COM EMOJI
   ========================================================================== */

.indicador-ritmo-tarefa {
    font-size: 0.9rem;
    font-weight: 500;
    margin-top: 8px; /* Espaçamento */
    height: 20px; /* Altura fixa para evitar "pulos" no layout */
    transition: color 0.3s ease;
}

/* Cores por ritmo */
.indicador-ritmo-tarefa.ritmo-rapido {
    color: #1abc9c; /* Verde/Azul-piscina */
}
.indicador-ritmo-tarefa.ritmo-normal {
    color: var(--gs-texto-principal);
}
.indicador-ritmo-tarefa.ritmo-lento {
    color: var(--gs-perigo);
}

/* ==========================================================================
   # ESTILOS PARA O TOOLTIP DE DIAGNÓSTICO DE RITMO
   ========================================================================== */

.tooltip-ritmo p {
    margin: 4px 0;
    font-size: 0.85rem;
    line-height: 1.4;
}
.tooltip-ritmo hr {
    border: none;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    margin: 6px 0;
}
.tooltip-ritmo strong {
    color: #bdc3c7; /* Cinza claro para os labels */
}

/*------------------------------------*\
    #RESPONSIVIDADE
\*------------------------------------*/

@media (min-width: 1024px) {

    .oa-modal-atribuir-v2 .oa-modal-body {
        padding: 20px; overflow: hidden;
