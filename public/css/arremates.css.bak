}

.erro-painel {
    text-align: center;
    color: var(--gs-perigo);
    padding: 20px;
}

/* Estilos para o Accordion de Inativos */
.oa-accordion-inativos {
    margin-top: 20px;
}

.oa-accordion-header {
    background-color: var(--gs-branco);
    border: 1px solid var(--gs-borda);
    border-radius: var(--gs-raio-borda-card);
    width: 100%;
    padding: 12px 20px;
    text-align: left;
    font-size: 1rem;
    font-weight: 500;
    color: var(--gs-texto-secundario);
