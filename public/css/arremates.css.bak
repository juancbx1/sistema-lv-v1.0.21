/* public/css/ordens-de-arremates.css */

/*------------------------------------*\
    # OVERLAY DE CARREGAMENTO DE PÁGINA
\*------------------------------------*/
.oa-page-loading-overlay {
    position: fixed; /* Cobre a tela inteira */
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(244, 246, 248, 0.9); /* Usa a cor de fundo da página, mas com transparência */
    z-index: 9999; /* Garante que fique acima de tudo */
    display: flex; /* Para centralizar o spinner */
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease-out;
}

.oa-page-loading-overlay.hidden {
    opacity: 0;
    pointer-events: none; /* Impede que o overlay bloqueie cliques quando estiver invisível */
}

/*------------------------------------*\
    #LAYOUT E COMPONENTES PRINCIPAIS
\*------------------------------------*/
.oa-container-principal { padding: 25px; max-width: 1600px; margin: 0 auto; }

/* NOVO: Card contêiner principal */
.oa-main-content-card {
    background-color: var(--gs-branco);
    padding: 30px;
    border-radius: var(--gs-raio-borda-card);
    box-shadow: 0 8px 30px rgba(0,0,0,0.05);
}

.oa-cabecalho-pagina { display: flex; justify-content: space-between; align-items: center; margin-bottom: 25px; padding-bottom: 15px; border-bottom: 1px solid var(--gs-borda); }
.oa-cabecalho-pagina h1 { font-size: 1.8rem; color: var(--gs-secundaria); font-weight: 600; }
.oa-card { background-color: var(--gs-branco); border-radius: var(--gs-raio-borda-card); padding: 10px; box-shadow: var(--gs-sombra-padrao); margin-bottom: 25px; }
.oa-titulo-secao { font-size: 1.4rem; color: var(--gs-secundaria); margin-bottom: 20px; padding-bottom:10px; border-bottom:1px solid var(--gs-borda); font-weight: 500;}
.hidden { display: none !important; }


/* --- ESTILOS PARA O NOVO DASHBOARD SUPERIOR --- */

.oa-painel-info-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
}

.oa-info-card {
    background-color: var(--gs-branco);
    border-radius: var(--gs-raio-borda-card);
    padding: 20px;
    box-shadow: var(--gs-sombra-padrao);
    text-align: center;
    border-left: 5px solid;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}
.oa-info-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--gs-sombra-hover);
}

.oa-info-card-icone {
    font-size: 1.5rem;
    display: inline-block;
}

.oa-info-card h3 {
    font-size: 1.1rem;
    color: var(--gs-secundaria);
    margin-bottom: 8px;
    font-weight: 600;
}

.oa-info-card-contador {
    font-size: 2.5rem;
    font-weight: 700;
    display: block;
    line-height: 1.1;
}

.oa-info-card-descricao {
    font-size: 0.85rem;
    color: var(--gs-texto-secundario);
}

/* Cores específicas */
.oa-info-card.principal { border-left-color: var(--gs-primaria); }
.oa-info-card.principal .oa-info-card-icone,
.oa-info-card.principal .oa-info-card-contador { color: var(--gs-primaria); }

.oa-info-card.alerta { border-left-color: var(--gs-aviso); }
.oa-info-card.alerta .oa-info-card-icone,
.oa-info-card.alerta .oa-info-card-contador { color: var(--gs-aviso); }

.oa-info-card.sucesso { border-left-color: var(--gs-sucesso); }
.oa-info-card.sucesso .oa-info-card-icone,
.oa-info-card.sucesso .oa-info-card-contador { color: var(--gs-sucesso); }

/* Remove o dashboard antigo */
.oa-card-dashboard {
    display: none;
}

/* Estilo para o input de quantidade específico */
.oa-input-qtd {
    max-width: 150px; /* Define uma largura máxima */
    margin-left: auto;  /* Centraliza o input */
    margin-right: auto; /* Centraliza o input */
}

/*------------------------------------*\
    #ESTILOS NOVA TELA DE DETALHES
\*------------------------------------*/

/* Novo Cabeçalho */
.oa-detalhe-header {
    display: grid;
    grid-template-columns: auto 1fr auto auto;
    gap: 20px;
    align-items: center;
    position: relative;
}
.oa-detalhe-thumbnail {
    width: 80px;
    height: 80px;
    border-radius: 8px;
    overflow: hidden;
    background-color: #f0f2f5;
}
.oa-detalhe-thumbnail img {
    width: 100%; height: 100%; object-fit: cover;
}
.oa-detalhe-info h2 { font-size: 1.7rem; margin: 0; color: var(--gs-secundaria); }

.oa-detalhe-info p { 
    font-size: 1rem; 
    color: var(--gs-texto-secundario); 
}

.oa-detalhe-saldo {
    text-align: center;
    padding: 10px 20px;
    background-color: var(--gs-fundo-pagina);
    border-radius: 8px;
}
.oa-detalhe-saldo label {
    display: block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    color: var(--gs-texto-secundario);
}
.oa-detalhe-saldo span {
    font-size: 2rem;
    font-weight: 700;
    color: var(--gs-aviso);
}
.oa-detalhe-header .botao-fechar {
    position: static; /* Remove o position absolute antigo */
    align-self: start; /* Alinha no topo da sua célula da grade */
}

/* Abas */
.oa-tabs {
    display: flex;
    border-bottom: 2px solid var(--gs-borda);
    margin-bottom: 25px;
}
.oa-tab-btn {
    padding: 10px 20px;
    border: none;
    background: none;
    cursor: pointer;
    font-size: 1rem;
    font-weight: 500;
    color: var(--gs-texto-secundario);
    border-bottom: 2px solid transparent;
    margin-bottom: -2px; /* Puxa o botão para baixo para a borda sobrepor a borda do container */
    transition: color 0.2s, border-color 0.2s;
}
.oa-tab-btn:hover {
    color: var(--gs-secundaria);
}
.oa-tab-btn.active {
    color: var(--gs-primaria);
    border-bottom-color: var(--gs-primaria);
    font-weight: 600;
}

/* Painéis das Abas */
.oa-tab-panel {
    display: none; /* Escondido por padrão */
}
.oa-tab-panel.active {
    display: block; /* Visível quando ativo */
}

.oa-form-acao {
    max-width: 500px;
    margin: 0 auto; /* Centraliza os formulários */
    padding: 10px;
}
.oa-form-instrucao {
    font-size: 0.9rem;
    color: var(--gs-texto-secundario);
    text-align: center;
    margin-bottom: 20px;
    line-height: 1.5;
}
.oa-input-grande {
    font-size: 1.5rem;
    text-align: center;
    padding: 12px;
}
.oa-btn-grande {
    padding: 12px 25px;
    font-size: 1.1rem;
}

/*------------------------------------*\
    #CARDS DE ARREMATE
\*------------------------------------*/
.oa-cards-container-arremate { 
    display: grid; 
    grid-template-columns: repeat(auto-fill, 
    minmax(320px, 1fr)); 
    gap: 20px; 
}
.oa-card-arremate { display: grid; grid-template-columns: auto 1fr auto; background-color: var(--gs-branco); border-radius: var(--gs-raio-borda-card); box-shadow: var(--gs-sombra-padrao); border-left: 6px solid var(--gs-borda); /* CORREÇÃO: Borda sempre cinza */ cursor: pointer; transition: transform 0.2s, box-shadow 0.2s; overflow: hidden; align-items: center; }
.oa-card-arremate:hover { transform: translateY(-4px); box-shadow: var(--gs-sombra-hover); }

.oa-card-img { width: 65px; 
    height: 65px; 
    object-fit: cover; 
    margin: 15px; 
    border-radius: 50%; 
    background-color: var(--gs-fundo-input); 
}
.oa-card-info { padding: 15px 10px; }
.oa-card-info h3 { font-size: 1rem; color: var(--gs-secundaria); margin: 0 0 5px 0; font-weight: 600; }
.oa-card-info p { font-size: 0.85rem; color: var(--gs-texto-secundario); margin: 0; }
.oa-card-dados { display: flex; gap: 20px; padding: 15px; background-color: var(--gs-fundo-input); border-left: 1px solid var(--gs-borda); height: 100%; align-items: center; }
.dado-bloco { text-align: center; }
.dado-bloco .label { font-size: 0.7rem; color: var(--gs-texto-secundario); text-transform: uppercase; font-weight: 600; }
.dado-bloco .valor { font-size: 1.4rem; font-weight: 700; line-height: 1.2; }
.dado-bloco .valor.total-pendente { color: var(--gs-primaria); }

/*------------------------------------*\
    #TELA DE DETALHES
\*------------------------------------*/
.oa-detalhe-grid { display: grid; grid-template-columns: 1fr 1.5fr; gap: 40px; }
.oa-detalhe-thumbnail { width: 120px; height: 120px; border-radius: var(--gs-raio-borda-card); margin: 0 auto 15px auto; background-color: var(--gs-fundo-input); border: 1px solid var(--gs-borda); overflow: hidden; }
.oa-detalhe-thumbnail img { width: 100%; height: 100%; object-fit: cover; }
.oa-detalhe-info { text-align: center; padding: 20px; background-color: var(--gs-fundo-input); border-radius: var(--gs-raio-borda-card); }
.oa-detalhe-info h3 { font-size: 1.4rem; color: var(--gs-secundaria); }

.oa-detalhe-total-pendente { font-size: 1.1rem; }
.oa-detalhe-total-pendente strong { font-size: 2rem; color: var(--gs-aviso); margin-left: 10px; }
.oa-divisor { border: 0; height: 1px; background-color: var(--gs-borda); margin: 20px 0; }
.oa-lista-origem { max-height: 200px; overflow-y: auto; padding: 15px; }
.oa-lista-origem p { font-size: 0.9rem; margin-bottom: 8px; border-bottom: 1px dashed var(--gs-borda); padding-bottom: 8px; }
.oa-lista-origem p:last-child { border-bottom: none; }
.oa-form-grupo { margin-bottom: 20px; }

.oa-form-grupo label { 
    display: block; 
    margin: 8px; 
    font-weight: 500;
    font-size: 0.9rem; 
    text-align: left; 
}

.oa-input, .oa-select { width: 100%; padding: 12px; font-size: 1rem; border: 1px solid var(--gs-borda); border-radius: 6px; }
/* Ajusta o alinhamento do flex container dos botões */

.oa-form-botoes {
    display: flex;
    justify-content: flex-end; /* Mantém "Lançar Arremate" à direita */
    align-items: center; /* Alinha os botões verticalmente */
    margin-top: 20px;
}

.oa-input-tarefas {
    width: 100%;
    padding: 12px;
    font-size: 1rem;
    border: 1px solid var(--gs-borda);
    border-radius: 6px;
}


/* --- ESTILOS PARA FILTROS E BUSCA --- */

.oa-card-filtros {
    padding: 20px;
}

.oa-secao-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 1px solid var(--gs-borda);
}

.oa-secao-header .oa-titulo-secao {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
}

.oa-btn-atualizar {
    background-color: transparent;
    color: var(--gs-primaria);
    border: 1px solid var(--gs-borda);
    border-radius: 50px;
    padding: 6px 14px;
    font-size: 0.85rem;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    cursor: pointer;
    transition: all 0.2s ease-in-out;
}
.oa-btn-atualizar:hover:not(:disabled) {
    background-color: var(--gs-primaria);
    color: var(--gs-branco);
    border-color: var(--gs-primaria);
}
.oa-btn-atualizar:disabled i {
    animation: oa-spin 1.2s linear infinite;
}

.oa-filtros-linha {
    display: flex;
    gap: 15px;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 15px;
}

.oa-form-grupo {
    margin-bottom: 0;
}

.oa-input-busca {
    padding: 10px 14px;
    border: 1px solid var(--gs-borda);
    border-radius: 6px;
    font-size: 1rem;
    width: 100%;
}

.oa-btn-filtros {
    background-color: transparent;
    border: 1px solid var(--gs-borda);
    color: var(--gs-texto-principal);
    padding: 10px 15px;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 500;
    white-space: nowrap;
}

.oa-filtros-avancados-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 20px;
    align-items: flex-end;
    padding: 20px;
    margin-top: 15px;
    background-color: #f9fbfd;
    border-radius: 8px;
    border: 1px solid #eef2f7;
    max-height: 0;
    overflow: hidden;
    padding-top: 0;
    padding-bottom: 0;
    transition: max-height 0.4s ease-out, padding 0.4s ease-out;
}
.oa-filtros-avancados-container:not(.hidden) {
    max-height: 300px;
    padding-top: 20px;
    padding-bottom: 20px;
}

.oa-btn-limpar-filtros {
    background-color: var(--gs-perigo);
    color: var(--gs-branco);
    padding: 10px 15px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-weight: 500;
    width: 100%;
    justify-content: center;
}
.oa-btn-limpar-filtros:hover {
    background-color: #c0392b; /* vermelho mais escuro */
}


.oa-tabela-historico .coluna-acoes {
    text-align: center;
}

/*------------------------------------*\
    BOTAO E LINHA ESTORNADA
\*------------------------------------*/

.oa-btn-icon {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    font-size: 0.9rem;
    padding: 0;
    line-height: 32px;
}

.linha-estornada {
    background-color: #f8f9fa;
    color: #999;
    text-decoration: line-through;
    opacity: 0.7;
}
.linha-estornada:hover {
    text-decoration: line-through;
}

/*------------------------------------*\
    #COMPONENTES GENÉRICOS
\*------------------------------------*/
.oa-btn { padding: 10px 20px; font-size: 0.95rem; font-weight: 600; border-radius: 6px; border: none; cursor: pointer; transition: all 0.2s; display: inline-flex; align-items: center; gap: 8px; color: var(--gs-branco); }
.oa-btn:hover:not(:disabled) { transform: translateY(-2px); box-shadow: var(--gs-sombra-hover); }
.oa-btn:disabled { opacity: 0.6; cursor: not-allowed; }
.oa-btn-sucesso { background-color: var(--gs-sucesso); }
.oa-btn-sucesso:hover:not(:disabled) { background-color: var(--gs-sucesso-hover); }
.oa-btn-secundario { background-color: var(--gs-texto-secundario); }
.oa-btn-secundario:hover:not(:disabled) { background-color: #6c7a7b; }
.oa-btn-perigo { background-color: var(--gs-perigo); }

/* Botão de Ícone (para ações secundárias como "Registrar Perda") */
.oa-btn-icon {
    padding: 0;
    width: 44px; /* Tamanho do botão */
    height: 44px;
    border-radius: 50%; /* Deixa o botão redondo */
    font-size: 1.1rem;
    line-height: 44px; /* Ajuda a centralizar o ícone */
    margin-right: auto; /* IMPORTANTE: Empurra ele para a esquerda */
    color: #fff4e0;
    border: none;

}

.botao-fechar { position: absolute; top: 20px; right: 20px; width: 32px; height: 32px; border-radius: 50%; border: none; font-size: 1.1rem; cursor: pointer; box-shadow: 0 2px 6px rgba(0,0,0,0.2); transition: all 0.2s; z-index: 10; display: flex; align-items: center; justify-content: center; color: var(--gs-branco); }

.oa-paginacao-container { 
    display: flex; 
    justify-content: center; 
    align-items: center; 
    gap: 10px; 
    margin-top: 15px; 
}
.oa-paginacao-container .pagination-btn { background-color: var(--gs-branco); color: var(--gs-primaria); border: 1px solid var(--gs-primaria); padding: 8px 16px; font-size: 0.9rem; border-radius: 6px; cursor: pointer; transition: all 0.2s; }
.oa-paginacao-container .pagination-btn:hover:not(:disabled) { background-color: var(--gs-primaria); color: var(--gs-branco); }
.oa-paginacao-container .pagination-btn:disabled { border-color: var(--gs-borda); color: #aabbc3; background-color: var(--gs-fundo-input); cursor: not-allowed; }
.oa-paginacao-container .pagination-current { font-size: 0.9rem; font-weight: 500; }

.spinner {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 40px;
    font-size: 1rem;
    color: var(--gs-texto-secundario); /* Cor mais suave */
    gap: 15px; /* Espaço entre o ícone e o texto */
}
.spinner::before {
    content: '';
    width: 28px;
    height: 28px;
    border: 4px solid var(--gs-borda);
    border-top-color: var(--gs-primaria);
    border-radius: 50%;
    animation: oa-spin 1s linear infinite;
}

@keyframes oa-spin { to { transform: rotate(360deg); } 

}
.spinner-btn-interno { width: 1em; 
    height: 1em; 
    border-width: 2px; 
    margin-right: 8px; 
    border-style: solid; 
    border-color: rgba(255,255,255,0.3); 
    border-top-color: var(--gs-branco); 
    border-radius: 50%; 
    animation: oa-spin 0.8s linear infinite; 
    display: inline-block; }

/* Modal e Popups (com prefixo oa- para evitar conflitos) */
.oa-popup-overlay, .popup-overlay { 
    position: fixed; 
    top: 0; left: 0; 
    width: 100%; height: 100%; 
    background-color: rgba(44, 62, 80, 0.5); 
    z-index: 1000; 
}

.oa-modal { position: fixed; top: 50%; left: 50%; transform: translate(-50%,-50%); background-color: var(--gs-branco); border-radius: var(--gs-raio-borda-card); box-shadow: var(--gs-sombra-padrao); width: 90%; max-width: 800px; z-index: 1001; display: flex; flex-direction: column; max-height: 90vh; }

/* ==========================================================================
   # MODAL DE HISTÓRICO GERAL (Com Design Responsivo Corrigido)
   ========================================================================== */

/* --- Contêiner principal do modal --- */
.oa-modal-historico {
    background-color: var(--gs-branco);
    border-radius: 10px;
    box-shadow: var(--gs-sombra-padrao);
    width: 95%; /* Ocupa mais espaço em telas pequenas */
    max-width: 1000px;
    z-index: 1001;
    display: flex;
    flex-direction: column;
    height: 90vh; /* Altura máxima */
    max-height: 700px;
}

/* --- Header, Filtros e Footer --- */
.oa-modal-historico .oa-modal-header,
.oa-modal-historico .oa-modal-filtros,
.oa-modal-historico .oa-modal-footer {
    flex-shrink: 0; /* Impede que encolham */
}

.oa-modal-historico .oa-modal-header {
    display: flex;
    justify-content: space-between; /* Empurra os itens para as pontas */
    align-items: center; /* Alinha verticalmente */
    padding: 15px 20px;
    border-bottom: 1px solid var(--gs-borda);
}

.oa-modal-historico .oa-modal-filtros {
    display: grid;
    grid-template-columns: 1fr; /* Coluna única no mobile */
    gap: 15px;
    padding: 15px;
    background-color: #f9fbfd;
    border-bottom: 1px solid var(--gs-borda);
}
.oa-modal-historico .oa-modal-filtros .oa-form-grupo label {
    font-size: 0.8rem; margin-bottom: 5px;
}

.oa-modal-historico .oa-modal-body {
    padding: 15px;
    overflow-y: auto;
    flex-grow: 1;
    background-color: var(--gs-fundo-pagina);
}

.oa-modal-historico .oa-modal-footer {
    padding: 15px 20px;
    border-top: 1px solid var(--gs-borda);
    background-color: #f9fbfd;
    border-radius: var(--gs-raio-borda-card);
}


/* --- ESTILO MOBILE-FIRST PARA A TABELA (VISUAL DE CARDS) --- */
.oa-tabela-historico {
    width: 100%;
    border-collapse: collapse;
}

/* Esconde o cabeçalho da tabela no mobile */
.oa-tabela-historico thead {
    display: none;
}

.oa-tabela-historico tbody,
.oa-tabela-historico tr {
    display: block;
}

.oa-tabela-historico tr {
    background-color: var(--gs-branco);
    border-radius: 8px;
    box-shadow: var(--gs-sombra-padrao);
    padding: 15px;
    margin-bottom: 15px;
}
.oa-tabela-historico tr:last-of-type {
    margin-bottom: 0;
}

.oa-tabela-historico td {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 0;
    text-align: right;
    border-bottom: 1px dotted var(--gs-borda);
}
.oa-tabela-historico td:last-of-type {
    border-bottom: none;
}

/* Gera os "labels" a partir do atributo data-label */
.oa-tabela-historico td::before {
    content: attr(data-label);
    font-weight: 500;
    color: var(--gs-texto-secundario);
    text-align: left;
    margin-right: 15px;
}

/* Ajustes finos de colunas específicas */
.oa-tabela-historico td[data-label="Produto"] {
    font-weight: 600;
    color: var(--gs-secundaria);
}
.oa-tabela-historico td[data-label="Ações"] .btn-estornar-historico {
    margin: -8px 0; /* Compensa o padding para o botão ficar bem alinhado */
}


@keyframes oa-fadeInPopup { 
    from { opacity: 0; transform: translate(-50%, -55%); } 
    to { opacity: 1; transform: translate(-50%, -50%); } 
}
@keyframes oa-fadeOutPopup {
    from { opacity: 1; transform: translate(-50%, -50%); } 
    to { opacity: 0; transform: translate(-50%, -60%); } 
}
@keyframes oa-fadeInOverlayPopup { 
    from { opacity: 0; } 
    to { opacity: 1; } 
}
@keyframes oa-fadeOutOverlayPopup {
    from { opacity: 1; } 
    to { opacity: 0; } 
}

.popup-mensagem { 
    position: fixed; 
    top: 50%; 
    left: 50%; 
    transform: translate(-50%,-50%); 
    padding: 25px 30px; 
    border-radius: var(--gs-raio-borda-card); 
    box-shadow: 0 8px 25px rgba(0,0,0,0.2); 
    z-index: 10002; 
    max-width: 480px; 
    width: 90%; 
    text-align: center;
    animation: oa-fadeInPopup 0.3s ease-out;
}
.popup-mensagem p { font-size: 1.05rem; line-height: 1.5; margin-bottom: 20px; }
