}

.barra-progresso.atencao { background-color: var(--gs-aviso); }
.barra-progresso.lento { background-color: var(--gs-perigo); }


.card-status-footer {
    margin-top: auto; /* Empurra o rodapé para o final do card */
    padding-top: 15px;
    border-top: 1px dashed var(--gs-borda);
}

/* Novo container para os botões de ação no rodapé do card de status */
.oa-card-botoes-acao-container {
    display: flex;
    gap: 10px; /* Espaço entre os botões */
    width: 100%;
}

.aviso-pausa-inteligente {
    font-size: 0.85rem;
    color: var(--gs-aviso);
    background-color: #fffbeb;
    border: 1px solid var(--gs-aviso);
    border-radius: 6px;
    padding: 10px;
    text-align: center;
