}

.info-tarefa {
    display: none;
}

.produto-tarefa { font-weight: 500; font-size: 0.9rem; }
.quantidade-tarefa { font-size: 0.85rem; color: var(--gs-texto-secundario); }

.cronometro-tarefa {
    font-weight: 500;
    font-size: 1.1rem;
