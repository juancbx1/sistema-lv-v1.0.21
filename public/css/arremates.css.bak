}

.accordion-icone {
    margin-left: auto;
    transition: transform 0.3s ease;
}

.oa-accordion-header.active .accordion-icone {
    transform: rotate(180deg);
}

.oa-accordion-content {
    display: none; /* Começa completamente escondido */
    background-color: var(--gs-branco);
    border: 1px solid var(--gs-borda);
